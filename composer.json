{
    "name": "iceshell21/jwt",
    "description": "A PHP JWT library for creating and validating JSON Web Tokens.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "you@example.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Iceshell21\\Jwt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iceshell21\\Jwt\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix --diff --dry-run --config=.php-cs-fixer.dist.php",
        "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    },
    "minimum-stability": "stable"
}
